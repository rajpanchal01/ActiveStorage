<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
  <strong>Images:</strong>
  <% post.images.each do |image|%>
  <%=image_tag image,style: "height:10vw;width:10vw;" if post.images.attached?%>
  <%end%>
  </p>
  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>
